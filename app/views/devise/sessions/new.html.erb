<section id="login" class="<%='rtl' if I18n.locale == :ar%> ">
  <div class="login-wrapper">
    <h2><%= t('signin.title') %></h2>
    <%= simple_form_for(resource, as: resource_name, url: "/#{I18n.locale}/users/sign_in") do |f| %>
      <div class="form-inputs">
        <div class="group">
          <%= hidden_field_tag 'locale', I18n.locale %>
          <%= f.input :phone,
                      required: true,
                      autofocus: true , wrapper: false, label: false%>
          <span class="highlight"></span>
          <span class="bar"></span>
          <%= f.label :phone, label: t('signin.phone'), class: 'material' %>
        </div>
        <div class="group">
          <%= f.input :password,
                      required: true,
                      input_html: { autocomplete: "current-password" } ,
                      autofocus: true, wrapper: false, label: false %>
          <span class="highlight"></span>
          <span class="bar"></span>
          <%= f.label :password, label: t('signin.password'), class: 'material' %>
        </div>
        <%= f.input :remember_me, as: :boolean, label: t('signin.remember') if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions flex-center mb-5">
        <%= f.button :submit, t('signin.submit'), class: 'btn  btn-success btn-rCab' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</section>
