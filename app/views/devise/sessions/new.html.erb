<section id="login">
  <div class="login-wrapper">
    <h2>Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
          <div class="group">
            <%= f.input :phone,
                      required: true,
                      autofocus: true , wrapper: false, label: false%>
            <span class="highlight"></span>
            <span class="bar"></span>
            <%= f.label :phone, label: 'Numéro de téléphone', class: 'material' %>
          </div>
          <div class="group">
            <%= f.input :password,
                      required: true,
                      input_html: { autocomplete: "current-password" } ,
                      autofocus: true, wrapper: false, label: false %>
            <span class="highlight"></span>
            <span class="bar"></span>
            <%= f.label :password, label: 'Mot de passe', class: 'material' %>
          </div>
        <%= f.input :remember_me, as: :boolean, label: 'Se souvenir de moi' if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions flex-center">
        <%= f.button :submit, "Log in", class: 'btn btn-lg btn-success btn-rCab' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>

