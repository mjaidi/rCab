<section id="login">
  <div class="login-wrapper">
    <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
      <div class="form-inputs">
          <div class="group">
            <%= f.input :first_name,
                      required: true,
                      autofocus: true , wrapper: false, label: false%>
            <span class="highlight"></span>
            <span class="bar"></span>
            <%= f.label :first_name, label: 'Prénom', class: 'material' %>
          </div>
          <div class="group">
            <%= f.input :last_name,
                      required: true,
                      autofocus: true , wrapper: false, label: false%>
            <span class="highlight"></span>
            <span class="bar"></span>
            <%= f.label :last_name, label: 'Nom', class: 'material' %>
          </div>
          <div class="group">
            <%= f.input :phone,
                      required: true,
                      autofocus: true , wrapper: false, label: false%>
            <span class="highlight"></span>
            <span class="bar"></span>
            <%= f.label :phone, label: 'Numéro de téléphone', class: 'material' %>
          </div>
          <div class="group">
            <%= f.input :password,
                      required: true,
                      input_html: { autocomplete: "new-password" } ,
                      autofocus: true, wrapper: false, label: false %>
            <span class="highlight"></span>
            <span class="bar"></span>
            <%= f.label :password, label: 'Mot de passe', class: 'material' %>
          </div>
          <div class="group">
            <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" } ,
                      autofocus: true, wrapper: false, label: false %>
            <span class="highlight"></span>
            <span class="bar"></span>
            <%= f.label :password_confirmation, label: 'Confirmation mot de passe', class: 'material' %>
          </div>


      </div>

      <div class="form-actions flex-center">
        <%= f.button :submit, "Sign Up", class: 'btn btn-lg btn-success btn-rCab' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>

