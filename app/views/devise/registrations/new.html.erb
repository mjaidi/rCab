<section id="login">
  <div class="login-wrapper">
    <h2>Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
      <div class="form-inputs">
          <div class="group">
            <%= f.input :first_name,
                      required: true,
                      autofocus: true , wrapper: false, label: false%>
            <span class="highlight"></span>
            <span class="bar"></span>
            <%= f.label :first_name, label: 'Prénom', class: 'material' %>
          </div>
          <div class="group">
            <%= f.input :last_name,
                      required: true,
                      autofocus: true , wrapper: false, label: false%>
            <span class="highlight"></span>
            <span class="bar"></span>
            <%= f.label :last_name, label: 'Nom', class: 'material' %>
          </div>
          <div class="group">
            <%= f.input :phone,
                      required: true,
                      autofocus: true , wrapper: false, label: false%>
            <span class="highlight"></span>
            <span class="bar"></span>
            <%= f.label :phone, label: 'Numéro de téléphone', class: 'material' %>
          </div>
          <div class="group">
            <%= f.input :password,
                      required: true,
                      input_html: { autocomplete: "new-password" } ,
                      autofocus: true, wrapper: false, label: false %>
            <span class="highlight"></span>
            <span class="bar"></span>
            <%= f.label :password, label: 'Mot de passe', class: 'material' %>
          </div>
          <div class="group">
            <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" } ,
                      autofocus: true, wrapper: false, label: false %>
            <span class="highlight"></span>
            <span class="bar"></span>
            <%= f.label :password_confirmation, label: 'Confirmation mot de passe', class: 'material' %>
          </div>
          <div class="photos-wrapper">
            <%= f.input :photo,
                      required: false,
                      autofocus: true , wrapper: false, label: false, input_html: {class: "inputfile input-file-5 image-upload", id: 'user[photo]'}%>
            <label for="user[photo]" class='file-input-label'><figure><svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17"><path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"/></svg></figure> <span>Photo de profile&hellip;</span></label>
            <%= f.input :photo_cache, as: :hidden %>

            <%= f.input :photo_moto,
                      required: false,
                      autofocus: true , wrapper: false, label: false, input_html: {class: "inputfile input-file-5 image-upload", id: 'user[photo_moto]' }%>
            <label for="user[photo_moto]" class='file-input-label'><figure><svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17"><path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"/></svg></figure> <span>Photo de la moto&hellip;</span></label>
            <%= f.input :photo_moto_cache, as: :hidden %>

            <%= f.input :photo_cin,
                      required: false,
                      autofocus: true , wrapper: false, label: false, input_html: {class: "inputfile input-file-5 image-upload", id: 'user[photo_cin]'}%>
            <label for="user[photo_cin]" class='file-input-label'><figure><svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17"><path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"/></svg></figure> <span>Photo de la CIN&hellip;</span></label>
            <%= f.input :photo_cin_cache, as: :hidden %>
          </div>

      </div>

      <div class="form-actions flex-center">
        <%= f.button :submit, "Sign Up", class: 'btn btn-lg btn-success btn-rCab' %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</section>

