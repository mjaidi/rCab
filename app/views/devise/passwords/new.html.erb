<section id="login" class="<%='rtl' if I18n.locale == :ar%> ">
  <div class="login-wrapper">
    <h2><%= t('devise.reset_password_title') %></h2>
    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>
      <div class="form-inputs">
        <div class='group'>
          <%= f.input :email,
                required: true,
                autofocus: true,
                label: false, wrapper: false %>
          <span class="highlight"></span>
          <span class="bar"></span>
          <%= f.label :phone, label: 'e-mail', class: 'material' %>
        </div>
      </div>
      <div class="form-actions flex-center mb-5">
        <%= f.button :submit, t('devise.password_reset'), class: 'btn  btn-success btn-rCab' %>
      </div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</section>
