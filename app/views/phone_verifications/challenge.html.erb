<section id="login">
  <div class="login-wrapper">
    <h2><%= t('verify.challenge_title') %></h2>
    <%= form_tag(verify_phone_verifications_path, method: :post) do -%>
      <%= hidden_field_tag 'locale', I18n.locale %>
      <% if @response %>
        <% @response.errors.each do |key, message| %>
          <p><%= message %></p>
        <% end %>
      <% end %>
      <div class='group'>
        <%= text_field_tag "code", '', class: 'form-control' %>
        <span class="highlight"></span>
        <span class="bar"></span>
        <%= label_tag "code", t('verify.enter_code'), class: 'material'  %>
      </div>
      <div class="flex-center mt-5">
        <%= button_tag t('verify.submit_verify'), class: 'btn btn-success btn-rCab btn-rCab_sm' %>
      </div>
    <% end -%>
  </div>
</section>
