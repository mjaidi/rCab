<section id="course_card" class='mt-3'>
  <div class="container">
    <h4 class = "text-center">Dashboard</h4>
    <div class="flex-center">
      <button type="button" class="btn btn-success btn-rCab  my-3" data-toggle="modal"   data-target="#driverTotal" >
      Voir Totoaux
      </button>
    </div>
    <div class="row">
      <% @courses.each do |course| %>
        <div class="col-12 col-md-4">
          <div class="card">
            <p>
              <%= course.created_at.strftime('%d/%m/%y') %> - <%=course.created_at.strftime('%R') %>
            </p>
            <p>Départ : <%= course.start_address %></p>
            <p>Arrivée : <%= course.end_address %></p>
            <p>Prix : <%= course.price %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<br>


<!-- Modal -->
<div class="modal fade" id="driverTotal" tabindex="-1" role="dialog" aria-labelledby="driverTotalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header bg-success text-white">
        <h5 class="modal-title" id="driverTotalLabel">Totaux</h5>
        <button data-dismiss= 'modal' class= 'close'>
            <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Nombre de courses: <%= @courses.count %></p>
        <p>Total CA: <%= @total_courses %> DH</p>
      </div>
      <div class="modal-footer">
        <button data-dismiss= 'modal' class= 'btn btn-success btn-rCab btn-rCab__sm' >Ok</button>
      </div>
    </div>
  </div>
</div>