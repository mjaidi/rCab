<p id="notice"><%= notice %></p>
<section id="driver_card">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-4-offset">
        <div class="card">
          <% if current_user.photo.blank? %>
            <img src="https://hadeplatform.com/img/default.png" class="avatar-large-bordered">
          <% else %>
            <%= cl_image_tag current_user.photo, width: 40, height: 40, crop: :thumb, gravity: :face, class: "avatar-large-bordered" %>
          <% end %>
          <div class="driver-info">
            <p>Nom : <%= @course.driver.first_name %> <%= @course.driver.last_name %></p>
            <p>Tél : <%= @course.driver.phone %></p>
            <p>ID : <%= @course.driver.id %></p>
          </div>
          <div class="course-info">
            <p>Départ : <%= @course.start_address %></p>
            <p>Arrivée : <%= @course.end_address %></p>
            <p>Prix : <%= @course.price %></p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<div
  id="map"
  style="width: 100%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

<%= link_to 'Edit', edit_course_path(@course) %> |
<%= link_to 'Back', courses_path %>
