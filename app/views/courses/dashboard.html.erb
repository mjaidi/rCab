<section id="course_card" class='mt-3'>
  <div class="container">
    <h4 class = "text-center">Dashboard</h4>
      <div class="flex-center my-3">
        <%= link_to 'Nouvelle Course', new_course_path, class: 'btn btn-success btn-rCab' %>
      </div>
    <div class="row">
      <% @courses.each do |course| %>
        <div class="col-12 col-md-4">
          <div class="card">
            <p>
              <%= course.created_at.strftime('%d/%m/%y') %> - <%=course.created_at.strftime('%R') %>
            </p>
            <p>Départ : <%= course.start_address %></p>
            <p>Arrivée : <%= course.end_address %></p>
            <p>Prix : <%= course.price %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<br>

